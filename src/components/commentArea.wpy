<template>
  <view class="commentarea">
    <view class="comment-title">
      <i class="iconfont icon-comment" style="margin-right:5rpx;"></i>评论区
    </view>
    <repeat for="{{comments}}" item="item">
      <view class="flex-row comment-item">
        <wxc-avatar class="avatar1" src="{{item.ksUser.kuHeadImgUrl}}"></wxc-avatar>
        <view class="flex-column comment-content">
          <text class="nick">{{item.ksUser.kuName}}</text>
          <wxc-elip line="3">{{item.kcContent}}</wxc-elip>
        </view>
      </view>
    </repeat>
    <view class="more {{ifLc ? 'animated infinite flip' : ''}}" @tap="loadComment"><i class="iconfont icon-more" style="font-size:22px;"></i></view>
    <view class="blank"></view>
  </view>
</template>
<script>
  import wepy from 'wepy'
  export default class CommentArea extends wepy.component {
    components = {};
    props = {
      comments: {
        type: Array,
        default: []
      },
      ksId: {
        type: String,
        default: ''
      }
    }
    data = {
      ifLc: false,
      page: 1
    };
    methods = {
      loadComment() {
        var that = this
        this.ifLc = true
        this.$parent.$parent.apis.getcomments(this.ksId, this.page++)
            .then(data => {
              that.ifLc = false
              console.log(that)
              that.comments = that.comments.concat(that.$parent.$parent.doData.comments(data.list))
              if(this.page > 2) {
                wx.showToast({
                  title: '评论已加载'
                })
              }
              that.$apply()
            })
          .catch(data => {
            that.ifLc = false
            that.$apply()
          })
      }
    };
    events = {};
    // Other properties
  }
</script>
